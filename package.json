      },
      {
        "label": "Delirium Everforest Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/delirium-theme-everforest-dark.json"
      },
      {
        "label": "Delirium Everforest Darken",
        "uiTheme": "vs-dark",
        "path": "./themes/delirium-theme-everforest-darken.json"
      },
      {
        "label": "Delirium Everforest Lilac",
        "uiTheme": "vs-dark",
